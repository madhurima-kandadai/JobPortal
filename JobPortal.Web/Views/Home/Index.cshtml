@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Jobs</h1>
    <p class="lead">    Welcome to the Job Portal.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            Welcome to the Job Portal.
        </p>
    </div>
    @{
        if (Request.RequestContext.HttpContext.User.Identity.IsAuthenticated)
        {
            <div class="col-md-4">
                <h2>Welcom Dear User</h2>
                <p><a class="btn btn-default" href="/Home/Jobs">Search Jobs</a></p>
            </div>
        }
        else
        {
            <div class="col-md-4">
                <h2>If you already have an account. Please login below</h2>
                <p><a class="btn btn-default" href="/Account/Login">Login</a></p>
            </div>
            <div class="col-md-4">
                <h2>If you don't have an account, Please register by clicking below.</h2>
                <p><a class="btn btn-default" href="/Account/Register">Register</a></p>
            </div>
        }
    }
</div>